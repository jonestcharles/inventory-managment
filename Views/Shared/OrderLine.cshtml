@model InventoryManagement.Models.OrderLine
@using HtmlHelpers.BeginCollectionItemCore

@using (Html.BeginCollectionItem("OrderLines"))
{
    <div class="form-horizontal row" id=Model.OrderLineID>
        <div class="form-group col-sm-4">
            <label asp-for="QTY" class="control-label"></label>
            <input asp-for="QTY" class="form-control" />
            <span asp-validation-for="QTY" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Product" class="control-label"></label>
            <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
        </div>
        <div class="form-group col-sm-2">
            <a href="#" onclick="$(this).parent().parent().remove();">Delete</a>
        </div>
    </div>
}
